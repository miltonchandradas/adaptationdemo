<mvc:View controllerName="my.adaptation.demo.controller.Base"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" displayBlock="true" height="100%">
    <App>
        <Page showHeader="false" class="sapUiResponsiveContentPadding">
            <MessageStrip text="Both Base and Extension UI controls have been instantiated" class="sapUiSmallMargin"></MessageStrip>
            <Button text="Show Extension UI" type="Emphasized" press=".onPress" class="sapUiSmallMargin"/>
